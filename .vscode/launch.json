    "version": "0.2.0",
    "configurations": [
        {
            "type": "kotlin",
            "request": "attach",
            "name": "Kotlin Attach",
            "hostName": "localhost",
            "projectRoot": "${workspaceFolder}",
            "logLevel": "ALL",
            "port": 5005,
            "timeout": 30000,
            "enableJsonLogging": true,
            "jsonLogFile": "${workspaceFolder}/ktDebugJsonLog.txt"
        },
        {
            "type": "kotlin",
            "request": "launch",
            "name": "Kotlin Launch",
            "projectRoot": "${workspaceFolder}",
            "logLevel": "ALL",
            "mainClass": "com.example.demo.DemoApplicationKt"
        }
    ]
}